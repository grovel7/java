//allows us to change the character at the given index

import java.util.*;
class FirstClass
{

   public static void main(String args[]) 
   
   {
    //string builder

    StringBuilder sb = new StringBuilder("tony");
    System.out.println(sb);

    //char at index 0 

    System.out.println(sb.charAt(0));

    //set char at index 0
    sb.setCharAt(0,'P');
    System.out.print(sb);
   }
}   
   
            

                 

